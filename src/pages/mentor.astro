---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getPermalink } from '~/utils/permalinks';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Mentor App',
};
---

<Layout metadata={metadata}>
  <HeroText title="Mentor App" subtitle="Easy to Use and Minimalist Community Management and Engagement App" />

  <Features
    id="features"
    tagline="Features"
    title="What you get with Mentor App"
    subtitle="Designed to be user-friendly and efficient, while providing a seamless experience"
    items={[
      {
        title: 'Live Event Management',
        description:
          'A seamless integration between two great frameworks that offer high productivity, performance and versatility.',
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Group Chats & Announcements',
        description:
          'Widgets made with Tailwind CSS ready to be used in Marketing Websites, SaaS, Blogs, Personal Profiles, Small Business...',
        icon: 'tabler:messages',
      },
      {
        title: 'Group Task Tracking & Statistics',
        description:
          'Creating secure, efficient, and user-friendly websites that deliver exceptional experiences and lasting value.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Member Management',
        description:
          'Having a good page speed impacts organic search ranking, improves user experience (UI/UX) and increase conversion rates.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Minimalist & Privacy Focused',
        description:
          "SEO lies in its ability to enhance a website's visibility, driving organic traffic and enabling it to reach a wider audience.",
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Professional Representation & Branding',
        description:
          'Embracing a culture that is open to new ideas and contributions is integral fostering innovation, collaboration, and a dynamic user experience.',
        icon: 'tabler:rosette-discount-check',
      },
    ]}
  />

  <Steps
    id="process"
    title="A guided journey from plans to creativity"
    tagline="simplified process"
    isReversed={true}
    items={[
      {
        title: 'Explore plans',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select a plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Register',
        icon: 'tabler:number-3',
      },
      {
        title: 'Review order',
        icon: 'tabler:number-4',
      },
      {
        title: 'Setup payment details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Download and start using the app',
        icon: 'tabler:number-7',
      },
    ]}
